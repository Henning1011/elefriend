<% if booking.user_id != current_user.id %>
  <li class="list-group-item">
    <div class="d-flex bd-highlight">

      <div class="p-2 bd-highlight align-self-center">
        <%= booking.date %>
      </div>

      <div class="p-2 bd-highlight align-self-center flex-grow-1">
        <%= booking.message %>
      </div>

      <div class="btn-group" data-controller="request">

        <div class="p-2 bd-highlight text-center align-self-center">
          <div class="d-none" data-request-target="solvedRequest" ></div>
        </div>

        <div class="p-2 bd-highlight align-self-center" data-request-target="acceptedRequest" data-action="click->request#accept">
          <%= link_to "Accept", accept_path(booking), data: {"turbo-method": :patch}, class: "lightblue-btn accept dashboard-button" %>
        </div>

        <div class="p-2 bd-highlight align-self-center" data-request-target="rejectedRequest" data-action="click->request#reject">
          <%= link_to "Reject", reject_path(booking), data: {"turbo-method": :patch}, class: "lightblue-btn reject dashboard-button" %>
        </div>

      </div>

    </div>
  </li>
<% end %>
